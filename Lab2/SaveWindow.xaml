<Window x:Class="Lab2.SaveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        Title="SaveWindow" Height="250" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBox x:Name="Dir" HorizontalAlignment="Left"  TextWrapping="Wrap" Text="Введите дирректорию, в которой будет сохранён .xlsx файл с угрозами." Margin="50 0 0 20" />
            <Button Content="Подтвердить" HorizontalAlignment="Left" Margin="50 0 0 0" Click="Save_Click"/>
        </StackPanel>

    </Grid>
</Window>
